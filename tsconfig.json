{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "element-plus/global", "node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
